{
  "name": "react-starter",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Ruan Mer",
    "email": "ruanrm@gmail.com",
    "url": "http://ruanmer.com"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint webpack app --ext .js,.jsx",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "dev": "NODE_ENV=development webpack-dev-server --config webpack/webpack",
    "build": "rm -Rf public/* | NODE_ENV=production webpack -p --config webpack/webpack",
    "build:analyzer": "ANALYZER=true npm run build"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.1.1",
    "styled-components": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bundle-loader": "^0.5.5",
    "enzyme": "^2.8.2",
    "eslint": "^4.0.0",
    "eslint-plugin-react": "^7.1.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.4",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^15.6.1",
    "webpack": "^2.6.1",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-server": "^2.4.5"
  },
  "pre-commit": {
    "silent": true,
    "run": [
      "lint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "app/src"
    ],
    "modulePaths": [
      "app/src"
    ]
  }
}
